//bubble sort
#include<stdio.h>
#include<conio.h>


void bubblesort(int a[], int n)
{
	int i,j,temp;
	for(i=0;i<n-1;i++)
	{
		for(j=i;j<n-1-i;j++)
		{
			if(a[j]>a[j+1])
			{
				temp=a[j];
				a[j]=a[j+1];
				a[j+1]=temp;
			}
		}
	}
}

void BeforeSorting(int a[], int n)
{
	int i;
	printf("Enter the values to be enterered in the array:\n");
	for(i=0;i<n-1;i++){
	
	
	
	scanf("%d",&a[i]);
}printf("Before Sorting\n");
	for(i=0;i<n-1;i++){
	printf("%d\n", a[i]);
}
}

void AfterSorting(int a[], int n)
{
		int i;
	printf("After Sorting in Ascending order\n");
	for(i=0;i<n-1;i++){
	printf("The values are %d\n", a[i]);
}
}

int main()
{
	int n;
	int a[10];
	printf("How many elements you want to enter:\n", a[10]);
	scanf("%d",&n);
	BeforeSorting(a, n);
	bubblesort(a, n);
	AfterSorting(a, n);
}

/* OUTPUT:
How many elements you want to enter:
